{
    "scripts": [
        {
            "name": "scripts/create",
            "path": "scripts/create",
            "description": "Create a new script",
            "cmd": "python3.11",
            "args": [
                "scripts/create/main.py"
            ],
            "aliases": [
                "create"
            ]
        },
        {
            "name": "scripts/delete",
            "path": "scripts/delete",
            "description": "Permanently delete a script",
            "cmd": "python3.11",
            "args": [
                "scripts/delete/main.py"
            ],
            "aliases": [
                "delete"
            ]
        },
        {
            "name": "scripts/help",
            "path": "scripts/help",
            "description": "Print a list of available scripts",
            "cmd": "python3.11",
            "args": [
                "scripts/help/main.py"
            ],
            "aliases": [
                "help",
                "list"
            ]
        }
    ],
    "templates": [
        {
            "name": "bash",
            "description": "A shell script runnable with bash",
            "path": "templates/bash",
            "template": {
                "cmd": "bash",
                "args": [
                    "{{ script.dir }}/main.sh"
                ]
            }
        },
        {
            "name": "perl",
            "description": "A perl script",
            "path": "templates/perl",
            "template": {
                "cmd": "perl",
                "args": [
                    "{{ script.dir }}/main.pl"
                ]
            }
        },
        {
            "name": "python2",
            "description": "A python2 script",
            "path": "templates/python2",
            "template": {
                "cmd": "python2",
                "args": [
                    "{{ script.dir }}/main.py"
                ]
            }
        },
        {
            "name": "python3",
            "description": "A python3 script",
            "path": "templates/python3",
            "template": {
                "cmd": "python3",
                "args": [
                    "{{ script.dir }}/main.py"
                ]
            }
        },
        {
            "name": "python3-uv",
            "description": "A python3 script runnable with uv",
            "path": "templates/python3-uv",
            "template": {
                "cmd": "uv run",
                "args": [
                    "{{ script.dir }}/main.py",
                    "--"
                ]
            }
        },
        {
            "name": "ruby",
            "description": "A ruby script",
            "path": "templates/ruby",
            "template": {
                "cmd": "ruby",
                "args": [
                    "{{ script.dir }}/main.rb"
                ]
            }
        },
        {
            "name": "sh",
            "description": "A shell script runnable with sh",
            "path": "templates/sh",
            "template": {
                "cmd": "sh",
                "args": [
                    "{{ script.dir }}/main.sh"
                ]
            }
        }
    ]
}